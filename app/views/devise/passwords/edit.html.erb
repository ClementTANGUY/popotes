<div class="container padded">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-2">
      <h2>Changer de mot de passe</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>

        <div class="form-inputs">
          <%= f.input :password, label: "Nouveau mot de passe", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, label: "Confirmez votre nouveau mot de passe", required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Changer mon mot de passe", class: "btn btn-popote btn-lg" %>
        </div>
      <% end %>
    </div>

    <p>&nbsp</p>

    <div class="col-sm-4 col-sm-offset-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
