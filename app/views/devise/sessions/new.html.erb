<div class="container padded">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-2">
      <h2>Connexion</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, label: "Mot de passe", required: false %>
          <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :button, "Se connecter".html_safe, class: "btn btn-popote btn-lg", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Connexion..."} %>
        </div>
      <% end %>

      <p>&nbsp</p>

      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name) %><br />
        <hr />
      <% end -%>
    </div>
    <div class="col-sm-4 col-sm-offset-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>


